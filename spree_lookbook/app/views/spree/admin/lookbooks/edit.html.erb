<% content_for :page_title do %>
  <%= t('spree.lookbook.title.edit') %> "<%= @lookbook.title %>"
<% end %>

<%#= render :partial => 'spree/admin/shared/lookbook_tabs', :locals => { :current => 'Lookbook Details' } %>

<% content_for :page_actions do %>
  <%= button_link_to t('spree.lookbook.link.back_to_lookbooks'), collection_url, :icon => 'icon-arrow-left', :id => 'admin_new_lookbook_link' %>
<% end %>

<div data-hook="admin_lookbook_edit_form">
 <div id="form-wrapper">
    <%= form_for [:admin, @lookbook] do |f| %>
      <% if @lookbook.try(:errors).present? %>
        <%= render :partial => 'spree/shared/error_messages', :locals => { :target => @lookbook } %>
      <% end %>
      <%= render :partial => 'form', :locals => { :f => f } %>
      <%= render :partial => 'spree/admin/shared/edit_resource_links' %>
    <% end %>
  </div>
</div>
