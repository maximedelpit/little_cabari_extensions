<% content_for :page_title do %>
  <%= t('spree.lookbook.title.new') %>
<% end %>

<%#= render :partial => 'spree/admin/shared/lookbook_tabs', :locals => { :current => 'Lookbooks' } %>

<% content_for :page_actions do %>
  <%= button_link_to t('spree.lookbook.link.back'), [:admin, @lookbook_collection, @lookbook], :icon => 'icon-arrow-left', :id => 'back_to_lookbooks_link' %>
<% end %>

<div data-hook="admin_lookbook_new_form">
  <div id="form-wrapper">
    <%= form_for [:admin, @lookbook] do |f| %>
      <% if @lookbook.try(:errors).present? %>
        <%= render :partial => 'spree/shared/error_messages', :locals => { :target => @lookbook } %>
      <% end %>
      <%= render :partial => 'form', :locals => { :f => f } %>
      <%= render :partial => 'spree/admin/shared/new_resource_links' %>
    <% end %>
  </div>
</div>
